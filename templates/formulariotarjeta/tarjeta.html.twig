{% extends 'base.html.twig' %}

{% block title %}Hello PagoController!{% endblock %}

{% block body %}


		<!-- SECTION -->
				<!-- BREADCRUMB -->
		<div id="breadcrumb" class="section">
			<!-- container -->
			<div class="container">
				<!-- row -->
				<div class="row">
					<div class="col-md-12">
						<h3 class="breadcrumb-header">Pago del pedido</h3>
						<ul class="breadcrumb-tree">
							<li><a href="#">Volver</a></li>
							<li class="active">Método de pago</li>
							<li><a href="#">Direccion de envio</a></li>
							<li><a href="#">Finalizar pedido</a></li>
						</ul>
					</div>
				</div>
				<!-- /row -->
			</div>
			<!-- /container -->
		</div>
		<!-- /BREADCRUMB -->
		<div class="section">
			<!-- container -->
			<div class="container">
				<!-- row -->
				<div class="row">
		

					<div class="col-md-7">
						<!-- Billing Details -->
						<div class="billing-details">
							<div class="section-title">
								<h3 class="title">Añadir método de pago</h3>
							</div>
                            {{ form_start(form) }}
							<div class="form-group">
								{{ form_row(form.numeroTarjeta, {'attr': {'class':'input'}}) }}
							</div>
							<div class="form-group">
								{{ form_row(form.fechaExpiracion, {'attr': {'class':'input'}}) }}
							</div>
							<div class="form-group">
								{{ form_row(form.cvv, {'attr': {'class':'input'}}) }}
							</div>
							
						</div>
						<button type="submit" class="primary-btn order-submit">Añadir tarjeta</button>
						{{ form_end(form) }}
				
				</div>
				<!-- /row -->
			</div>
			<!-- /container -->
		</div>
			</div>
		
		 
{% endblock %}