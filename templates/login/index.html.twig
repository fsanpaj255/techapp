{% extends 'base.html.twig' %}

{% block title %}Bienvenido{% endblock %}

{% block body %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
     <form action="{{ path('app_login') }}" method="post">

    
    <div class="section">
    <div class="container">
    <div class="col-md-7">
    <div class="billing-details">
    <div class="section-title">
    <h3 class="title">Acceda a su cuenta</h3>
     </div>

        <div class='form-group'>
        <strong>Correo:</strong>
        <input type="text" class="input" id="username" name="_username" value="{{ last_username }}" placeholder="Correo" autocomplete="username" required autofocus>
         </div>
       
        <div class='form-group'>
        <strong>Contraseña:</strong>
        <input type="password"class="input"  id="password" name="_password" placeholder="Contraseña">
         </div>

         <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}">

        <div class="input-checkbox">
          <input type="checkbox" id="create-account" name="_remember_me">
            <label for="create-account">
                <span></span>
               Recuérdame
            </label>
        </div>
        <div class="caption"></div>


       <button class="primary-btn order-submit" type="submit">
        Iniciar sesión
    </button>
</form>
    </div>
    </div>
    </div>
    </div>
{% endblock %}