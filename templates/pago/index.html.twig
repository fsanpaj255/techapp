{% extends 'base.html.twig' %}

{% block title %}Hello PagoController!{% endblock %}

{% block body %}
	<!-- SECTION -->
				<!-- BREADCRUMB -->
		<div id="breadcrumb" class="section">
			<!-- container -->
			<div class="container">
				<!-- row -->
				<div class="row">
					<div class="col-md-12">
						<h3 class="breadcrumb-header">Resumen final</h3>
						<ul class="breadcrumb-tree">
							<li><a href="#">Volver</a></li>
							<li ><a href="#">Método de pago</a></li>
							<li><a href="#">Direccion de envio</a></li>
							<li class="active">Finalizar pedido</li>
						</ul>
					</div>
				</div>
				<!-- /row -->
			</div>
			<!-- /container -->
		</div>
		<!-- /BREADCRUMB -->

		<!-- SECTION -->
		<div class="section">
			<!-- container -->
			<div class="container">
				<!-- row -->
				<div class="row">

					<div class="col-md-7">
						<!-- Billing Details -->
						<div class="billing-details">
							<div class="section-title">
								<h3 class="title">Resumen de tus datos,  <h3 class="title naranja"> {{app.user.correo}}</h3></h3>
							</div>

							<div class="recuadropedido">
								<div class="datospedido">
								<h5>TARJETA UTILIZADA </h5>
							<img src="/img/metodo-de-pago.png"> {{numeroTarjeta}}
							</div>
						</div>
							
							</div>
							
							
							<div class="recuadropedido">
							<div class="datospedido">	
								<h5>DIRECCIÓN DE ENVÍO </h5>
							<img src="/img/diresion.png"> {{calle}}, {{codigopostal}} {{ciudad}} , {{provincia}}, {{pais}}
							</div>
							</div>
							
						<!-- /Billing Details -->


						<!-- Order notes -->
						<div class="order-notes">
							
						</div>
						<!-- /Order notes -->
					</div>

					<!-- Order Details -->
					<div class="col-md-5 order-details">
						<div class="section-title text-center">
							<h3 class="title">Tu pedido</h3>
						</div>
						<div class="order-summary">
							<div class="order-col">
								<div><strong>PRODUCTO/S</strong></div>
								<div><strong>TOTAL</strong></div>
							</div>
							<div class="order-products">
							{% for producto, datos in productos %}
								
								<div class="order-col">
	 								<div>{{ producto }} x{{ datos.cantidad }}</div>
									<div>{{datos.precio * datos.cantidad}} €</div>
								</div>
							{% endfor %}
							
							</div>
							<div class="order-col">
								<div><strong>TOTAL</strong></div>
								<div><strong class="order-total">{{total}}</strong></div> 
							</div>
						</div>
						<div class="input-checkbox">
							<input type="checkbox" id="terms">
							<label for="terms">
								<span></span>
								Acepto los  <a href="#">términos y condiciones</a>
							</label>
						</div>
						<form>
						<button type="submit" class="primary-btn order-submit">Realizar pedido</button>
						</form>
					
					</div>
					<!-- /Order Details -->
				</div>
				<!-- /row -->
			</div>
			<!-- /container -->
		</div>
		
		 
{% endblock %}
