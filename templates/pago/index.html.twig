{% extends 'base.html.twig' %}

{% block title %}Hello PagoController!{% endblock %}

{% block body %}


		<!-- SECTION -->
		<div class="section">
			<!-- container -->
			<div class="container">
				<!-- row -->
				<div class="row">

					<div class="col-md-7">
						<!-- Billing Details -->
						<div class="billing-details">
							<div class="section-title">
								<h3 class="title">Añadir método de pago</h3>
							</div>
							
							{{ form_start(form) }}
							<div class="form-group">
								{{ form_row(form.numeroTarjeta, {'attr': {'class':'input'}}) }}
							</div>
							<div class="form-group">
								{{ form_row(form.fechaExpiracion, {'attr': {'class':'input'}}) }}
							</div>
							<div class="form-group">
								{{ form_row(form.cvv, {'attr': {'class':'input'}}) }}
							</div>
							<div class="section-title">
								<h3 class="title">Añadir Dirección de envio</h3>
							</div>
							<div class="form-group">
								{{ form_row(form2.calle, {'attr': {'class':'input'}}) }}
							</div>
							<div class="form-group">
								{{ form_row(form2.codigopostal, {'attr': {'class':'input'}}) }}
							</div>
							<div class="form-group">
								{{ form_row(form2.ciudad, {'attr': {'class':'input'}}) }}
							</div>
							<div class="form-group">
								{{ form_row(form2.provincia, {'attr': {'class':'input'}}) }}
							</div>
							<div class="form-group">
								{{ form_row(form2.pais, {'attr': {'class':'input'}}) }}
							</div>
							
						</div>
						<!-- /Billing Details -->


						<!-- Order notes -->
						<div class="order-notes">
							
						</div>
						<!-- /Order notes -->
					</div>

					<!-- Order Details -->
					<div class="col-md-5 order-details">
						<div class="section-title text-center">
							<h3 class="title">Tu pedido</h3>
						</div>
						<div class="order-summary">
							<div class="order-col">
								<div><strong>PRODUCTO/S</strong></div>
								<div><strong>TOTAL</strong></div>
							</div>
							<div class="order-products">
							{% for producto, datos in productos %}
								
								<div class="order-col">
	 								<div>{{ producto }} x{{ datos.cantidad }}</div>
									<div>{{datos.precio * datos.cantidad}} €</div>
								</div>
							{% endfor %}
							
							</div>
							<div class="order-col">
								<div><strong>TOTAL</strong></div>
								<div><strong class="order-total">{{total}}</strong></div>
							</div>
						</div>
						<div class="input-checkbox">
							<input type="checkbox" id="terms">
							<label for="terms">
								<span></span>
								Acepto los  <a href="#">términos y condiciones</a>
							</label>
						</div>
						<button type="submit" class="primary-btn order-submit">Realizar pedido</button>
						{{ form_end(form) }}
					
					</div>
					<!-- /Order Details -->
				</div>
				<!-- /row -->
			</div>
			<!-- /container -->
		</div>
		
		 
{% endblock %}
