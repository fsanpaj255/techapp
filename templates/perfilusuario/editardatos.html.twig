{% extends 'base.html.twig' %}

{% block title %}Editar perfil{% endblock %}

{% block body %}
    <div class="section">
        <div class="container">
            <div class="col-md-7">
                <div class="billing-details">
                    <div class="section-title">
                        <h3 class="title">Editar perfil</h3>
                    </div>
                    <form action="{{ path('app_actualizar_datos') }}" method="POST">
                        {{ form_start(form) }}
                        <div class="form-group">
                            <label for="nickname">Nickname</label>
                            {{ form_widget(form.nickname, { 'attr': {'class': 'form-control'} }) }}
                        </div>
                        <div class="form-group">
                            <label for="correo">Correo</label>
                            {{ form_widget(form.correo, { 'attr': {'class': 'form-control'} }) }}
                        </div>
                        <div class="form-group">
                            <label for="nombre">Nombre</label>
                            {{ form_widget(form.nombre, { 'attr': {'class': 'form-control'} }) }}
                        </div>
                        <div class="form-group">
                            <label for="apellidos">Apellidos</label>
                            {{ form_widget(form.apellidos, { 'attr': {'class': 'form-control'} }) }}
                        </div>
                        <div class="form-group">
                            <label for="dni">DNI</label>
                            {{ form_widget(form.dni, { 'attr': {'class': 'form-control'} }) }}
                        </div>
                        <button type="submit" class="btn btn-primary">Guardar cambios</button>
                        {{ form_end(form) }}
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}