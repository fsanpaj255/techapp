{% extends 'base.html.twig' %}

{% block title %}Registrarse{% endblock %}

{% block body %}
    {{ form_start(registrationForm) }}
    <div class="section">
        <div class="container">
            <div class="col-md-7">
                <div class="billing-details">
                    <div class="section-title">
                        <h3 class="title">Registrarse</h3>
                    </div>
                    <div class='form-group'>
                        {{ form_row(registrationForm.nickname, {'attr': {'class':'input'}}) }}
                    </div>
                    <div class='form-group'>
                        {{ form_row(registrationForm.nombre, {'attr': {'class':'input'}}) }}
                    </div>
                    <div class='form-group'>
                        {{ form_row(registrationForm.apellidos, {'attr': {'class':'input'}}) }}
                    </div>
                    <div class='form-group'>
                        {{ form_row(registrationForm.dni, {'attr': {'class':'input'}}) }}
                    </div>
                    <div class='form-group'>
                        {{ form_row(registrationForm.direccion, {'attr': {'class':'input'}}) }}
                    </div>
                    <div class='form-group'>
                        {{ form_row(registrationForm.tarjeta, {'attr': {'class':'input'}}) }}
                    </div>
                    <div class='form-group'>
                        {{ form_row(registrationForm.correo, {'attr': {'class':'input'}}) }}
                    </div>
                    
                    <div class='form-group'>
                        {{ form_row(registrationForm.cvv, {'attr': {'class':'input'}}) }}
                    </div>
                    <div class='form-group'>
                        {{ form_row(registrationForm.ciudad, {'attr': {'class':'input'}}) }}
                    </div>
                    <div class='form-group'>
                        {{ form_row(registrationForm.codigoPostal, {'attr': {'class':'input'}}) }}
                    </div>
                    <div class='form-group'>
                        {{ form_row(registrationForm.plainPassword, {'attr': {'class':'input'}}) }}
                    </div>
                    {{ form_row(registrationForm.agreeTerms) }}

                    <button type="submit" class="primary-btn order-submit">Crear cuenta</button>
                </div>
            </div>
        </div>
    </div>
    {{ form_end(registrationForm) }}
{% endblock %}